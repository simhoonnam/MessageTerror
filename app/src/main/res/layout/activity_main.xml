<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:orientation="vertical"
    android:background="#595959"
    tools:context="com.example.messageterror.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="전화 번호"
                android:textSize="30dp"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:background="#252524"
                android:gravity="center"/>
            <EditText
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:hint="010-1234-5678"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:background="#AEB8B0"
                android:textSize="30dp"
                android:inputType="phone"
                android:id="@+id/phonenumber"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="개수"
                android:textSize="30dp"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:background="#252524"
                android:gravity="center"/>
            <EditText
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:hint="300"
                android:textSize="30dp"
                android:layout_weight="3"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:background="#AEB8B0"
                android:inputType="number"
                android:id="@+id/counttext"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="내용"
                android:textSize="30dp"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:background="#252524"
                android:gravity="center"/>
            <EditText
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:hint="문자 300개 귀귀"
                android:layout_weight="3"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:background="#AEB8B0"
                android:textSize="30dp"
                android:id="@+id/contenttext"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Message Terror Start"
            android:textSize="40dp"
            android:background="#252524"
            android:layout_margin="10dp"
            android:id="@+id/terrorstartbutton"/>

    </LinearLayout>

</LinearLayout>
